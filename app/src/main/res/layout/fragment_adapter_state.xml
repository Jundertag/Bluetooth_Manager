<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/local_adapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/text_title_size"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/local_adapter_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Profiles:"
        android:textStyle="bold"
        android:textSize="@dimen/text_title_size"
        android:textColor="?attr/colorOnSurface"
        app:cardCornerRadius="@dimen/card_corner_radius"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/local_adapter_a2dp_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding"
        android:layout_marginHorizontal="18dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/local_adapter_profile_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/local_adapter_a2dp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A2DP"
                android:textStyle="bold"
                android:textSize="@dimen/text_subtitle_size" />

            <TextView
                android:id="@+id/local_adapter_a2dp_connections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no connections"
                android:textSize="@dimen/text_normal_size"
                app:layout_constraintTop_toBottomOf="@id/local_adapter_a2dp_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="not playing music"
                android:textSize="@dimen/text_normal_size"
                app:layout_constraintTop_toBottomOf="@id/local_adapter_a2dp_connections"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/local_adapter_headset_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/local_adapter_a2dp_cardview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/local_adapter_headset_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HEADSET"
                android:textStyle="bold"
                android:textSize="@dimen/text_subtitle_size" />

            <TextView
                android:id="@+id/local_adapter_headset_connections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no connections"
                android:textSize="@dimen/text_normal_size"
                app:layout_constraintTop_toBottomOf="@id/local_adapter_headset_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="audio not connected"
                android:textSize="@dimen/text_normal_size"
                app:layout_constraintTop_toBottomOf="@id/local_adapter_headset_connections"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>